<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="attractionViewModel"
            type="com.example.tptour.attractions.viewmodel.AttractionListViewModel"/>

        <import type="android.view.View"/>

    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".attractions.view.AttractionDetailFragment"
            android:orientation="vertical"
            >
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                imageItem="@{attractionViewModel.imageList}"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                loadImageUrl="@{attractionViewModel.attractionsDateDetail.getCoverImageUrl()}"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{attractionViewModel.attractionsDateDetail.name}"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{attractionViewModel.attractionsDateDetail.introduction}"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{attractionViewModel.attractionsDateDetail.address}"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{attractionViewModel.attractionsDateDetail.modified}"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/official_link_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                underLineText="@{attractionViewModel.attractionsDateDetail.official_site}"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:textColor="@color/colorSecondary"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>